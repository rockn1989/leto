
	<div class="main-banner">
		<div class="uk-container uk-container--large">

			<div class="main-banner__img"  uk-scrollspy="cls:border-anim">

				{% if data.video is defined %}
					<video autoplay preload loop playsinline muted>
							<source src="{{data.video.url.mp4}}" type="video/mp4">
							<source src="{{data.video.url.webm}}" type="video/webm">
				</video>
				{% else %}
					<picture>
						<source srcset="{{data.bgURL.desk}}" media="(min-width: 961px)">
						<source srcset="{{data.bgURL.tablet}}" media="(min-width: 641px) and (max-width: 960px)">
						<source srcset="{{data.bgURL.mob}}" media="(max-width: 640px)">
						<img src="{{data.bgURL.desk}}" alt="" loading="lazy">
					</picture>
				{% endif %}


			</div>
			<div class="main-banner__text">
				<div class="main-banner__title">
					<h1 uk-scrollspy="cls:slide-up">{{data.title}}</h1>
				</div>
				<div class="main-banner__subtitle">
					{{data.subtitle}}
				</div>
				<svg width="29px" height="67px" class="main-banner__arrow-down">
				  <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="img/icon-svg/sprite/sprite-svg.svg#arrow-down"></use>
				</svg>
			</div>
			{% if data.flyBox.isset == true %}
			<div class="fly-box " uk-scrollspy="cls: slide-up-abs uk-visible; delay: 500">
				<img src="{{data.flyBox.img}}" alt="Лето">
			</div>
			{% endif %}
		</div>
	</div>
